<odoo>
    <record id="view_reservation_conflict_wizard_form" model="ir.ui.view">
        <field name="name">reservation.conflict.wizard.form</field>
        <field name="model">reservation.conflict.wizard</field>
        <field name="arch" type="xml">
            <form string="Conflict Resolution">
                <sheet>
                    <group>
                        <field name="trainer_id" readonly="1"/>
                        <field name="conflict_message" readonly="1"/>
                    </group>
                </sheet>
                <footer>
                    <button name="confirm_reservation" string="Confirm" type="object" class="btn-primary" invisible="flag"/>
                    <button name="confirm_change_details" string="Confirm change" type="object" class="btn-primary" invisible="not flag"/>
                    <button name="cancel_reservation" string="Cancel" type="object" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>


